<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:id="@+id/ll_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:id="@+id/rl_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_launch_bg"
        >

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp165"
            android:src="@drawable/ic_logo_jt" />


        <com.communication.lib_core.PyTextViewPangmen
            android:id="@+id/tv_welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_hengyong"
            android:textColor="@color/grey_dark"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_logo"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/dp3"
            android:lineHeight="32dp"
            />

        <TextView
            android:id="@+id/tv_welcome_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_welcome"
            android:textColor="#ff999999"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_welcome_title"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp40"
            />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_welcome"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            />


    </RelativeLayout>
    </LinearLayout>
</layout>