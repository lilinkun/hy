<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_welcome"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="65dp"
            android:layout_height="50.5dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="@dimen/dp50"
            android:src="@drawable/ic_logo_jt"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/iv_logo"
            app:layout_constraintStart_toEndOf="@+id/iv_logo"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您好，欢迎登录"
                android:textSize="14sp"
                android:textColor="@color/controller_bg"
                />

            <com.communication.lib_core.PyTextViewPangmen
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name_hengyong"
                android:textColor="@color/grey_dark"
                android:textSize="28sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo"
            android:layout_marginTop="@dimen/dp80"
            android:background="@drawable/shape_login"
            android:paddingStart="@dimen/dp30"
            android:paddingEnd="@dimen/dp30"
            android:paddingTop="@dimen/dp40"
            >


                <com.communication.lib_core.TextViewYH
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_account"
                    android:textColor="@color/grey_dark"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/dp20"
                    />


                <com.communication.lib_core.EditTextYH
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:background="@drawable/bg_login_btn"
                    android:hint="@string/login_account_hint"
                    android:textSize="15sp"
                    android:textColorHint="@color/grey_light"
                    android:theme="@style/Py.Blue"
                    android:padding="10dp" />




            <com.communication.lib_core.TextViewYH
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_password"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                android:typeface="sans"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginStart="@dimen/dp20"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            >

                <com.communication.lib_core.EditTextYH
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:hint="@string/login_password_hint"
                    android:layout_centerVertical="true"
                    android:textColorHint="@color/grey_light"
                    android:background="@drawable/bg_login_btn"
                    android:inputType="textPassword"
                    android:textSize="15sp"
                    android:theme="@style/Py.Blue"
                    android:padding="10dp"
                    android:paddingEnd="@dimen/dp40"/>

                <ImageView
                    android:id="@+id/iv_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hidden_psd"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dp10"/>

            </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="32dp"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_verification_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_login_verify"
                        android:drawablePadding="10dp"
                        android:hint="@string/login_verify_hint"
                        android:padding="10dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_verification_code"
                        android:layout_width="160dp"
                        android:layout_height="80dp"
                        android:layout_alignTop="@+id/et_verification_code"
                        android:layout_alignBottom="@+id/et_verification_code"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY" />


                </RelativeLayout>


                <com.communication.lib_core.PyButton
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp70"
                    android:layout_marginTop="@dimen/dp50"
                    app:py_button_name="@string/login" />

            </LinearLayout>




        <com.communication.lib_core.PyLoad
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="gone" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>