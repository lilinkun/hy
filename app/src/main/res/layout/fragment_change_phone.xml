<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grey"
        >

    <com.communication.lib_core.PyTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:py_title_name="@string/change_phone"
        app:py_next_text="下一步"
        app:py_title_showBack="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >



    </com.communication.lib_core.PyTitle>


        <com.communication.lib_core.TextViewYH
            android:id="@+id/change_phone_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_phone_tip"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginStart="@dimen/dp16"
            android:textSize="16sp"
            android:textColor="@color/grey_dark"
            />

        <com.communication.lib_core.TextViewYH
            android:id="@+id/change_phone_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_phone_message"
            app:layout_constraintTop_toBottomOf="@+id/change_phone_tip"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dp30"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:textSize="14sp"
            android:textColor="@color/grey_dark"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/change_phone_message"
            android:layout_marginTop="@dimen/dp12"
            >

            <com.communication.lib_core.EditTextYH
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入短信验证码"
                android:layout_marginStart="@dimen/dp16"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sight_text_size_14"
                android:layout_toStartOf="@+id/code_line"
                />

            <com.communication.lib_core.TextViewYH
                android:id="@+id/vcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/v_code_bg"
                android:textSize="@dimen/sight_text_size_14"
                android:layout_marginEnd="@dimen/dp10"
                />

            <View
                android:id="@+id/code_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp15"
                android:layout_toStartOf="@+id/vcode"
                android:background="@color/grey_line"
                />


        </RelativeLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>